{
  "name": "@modern-erp/core-api",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run db:generate && tsup",
    "start": "node dist/index.js",
    "start:basic": "node dist/basic-index.js",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx prisma migrate deploy --schema=../../packages/database/prisma/schema.prisma",
    "db:generate": "npx prisma generate --schema=../../packages/database/prisma/schema.prisma"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "@hono/node-server": "^1.8.0",
    "@hono/zod-validator": "^0.2.0",
    "zod": "^3.22.0",
    "@prisma/client": "^5.9.0",
    "@modern-erp/database": "file:./database",
    "@modern-erp/shared-types": "file:./shared-types",
    "jose": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "pino": "^8.19.0",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "tsx": "^4.7.0",
    "tsup": "^8.0.0",
    "vitest": "^1.2.0"
  }
}