{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd ../.. && pnpm install && pnpm build --filter @modern-erp/mcp-orchestrator"
  },
  "deploy": {
    "startCommand": "cd ../.. && pnpm start --filter @modern-erp/mcp-orchestrator",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}