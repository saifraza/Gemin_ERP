# Database connection
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secret for authentication
JWT_SECRET=your-secret-key-change-in-production

# Service URLs (optional - will use Railway internal URLs by default)
# CORE_API_URL=http://core-api.railway.internal:3001
# MCP_ORCHESTRATOR_URL=http://mcp-orchestrator.railway.internal:3000
# FACTORY_API_URL=http://factory-api.railway.internal:3002
# ANALYTICS_API_URL=http://analytics-api.railway.internal:3003

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend.railway.app

# Port (optional - defaults to 4000)
PORT=4000